{
  "manifest_version": 3,
  "name": "ResumeAI",
  "version": "2.0.0",
  "description": "AI-powered resume tailoring. Reads the job description on any page and rewrites your resume to match it — powered by Claude.",

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "ResumeAI – Tailor your resume"
  },

  // "icons": {
  //   "16":  "icons/icon16.png",
  //   "48":  "icons/icon48.png",
  //   "128": "icons/icon128.png"
  // },

  "host_permissions": [
    "https://*.vercel.app/*"
  ]
}
